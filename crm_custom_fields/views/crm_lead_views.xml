<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_kanban_view_simplified_quick_create" model="ir.ui.view">
            <field name="name">crm.lead.kanban.quick.create.simplified</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/> <field name="arch" type="xml">

                <xpath expr="//kanban" position="attributes">
                    <attribute name="quick_create">true</attribute>
                    <attribute name="quick_create_view"></attribute> </xpath>

                <xpath expr="//kanban" position="inside">
                    <quick_create_view>
                        <form>
                            <field name="name" string="Nombre del Prospecto"/>
                        </form>
                    </quick_create_view>
                </xpath>
                
            </field>
        </record>

        <record id="crm.crm_lead_action_pipeline" model="ir.actions.act_window">
            
            <field name="view_mode">kanban,form</field>
        
        </record>

    </data>
</odoo>